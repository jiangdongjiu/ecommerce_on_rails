<div class="columns">
  <div class="column is-half">
    <h2 class="title is-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", type: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input", type: "password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input", type: "password" %>
      </div>

      <div class="field">
        <%= f.label "address" %>
        <%= f.text_field :default_shipping_address, autocomplete: "off", class: "input", type: "text", id: "user_address" %>
      </div>

      <div class="field">
        <div class="select" >
          <%= f.collection_select(:province_id, Province.all, :id, :name, autocomplete: "off", id: "user_province") %>
        </div>
      </div>
      <br/>
      <div class="actions">
        <%= button_tag 'Sign up', class: "button is-primary"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
